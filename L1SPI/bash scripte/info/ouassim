//3Recherche de fichiers
// je me replace dans le répertoire SPI1-OUTILS pour avoir uniquement les fils ensuite l'arborescence.
cd tp1
cd SPI1-OUTILS
	//ensuite pour les fils
		ls
	//pour toute l'arborescence
		find ./ -name  "*" -print
//EX3-
//a-Pour les fichiers pdf
	find ./ -name  "*.pdf" -print
//b-Pour les fichiers ".c" ou ".o"
	find ./ -name  *.[co] -print
//c- commencant par un caractere quelconque, puis d'un \a",puis d'une
chaine de caracteres quelconque et se finissant par \.ppt"
	find ./ -name  ?a*.ppt -print
//d-
	find ./ -name  [A-Z][a-z]"*"[.sh] -print
//e-
	find ./ -type f -print
//3-
	find . -name "*r*" -print
//4-supprimer les fichiers de suffixe .o
	find . -name "*.o" -exec rm {} \;

